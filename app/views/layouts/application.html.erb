<!DOCTYPE html>
<html>
<head>
  <title>Vino</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults, :cache => true %>
  <%= csrf_meta_tag %>

  <!-- blueprint files start -->
    <%= stylesheet_link_tag 'blueprint/screen', :media => 'screen' %>
    <%= stylesheet_link_tag 'blueprint/screen', :media => 'print' %>
    <!--[if IE]>
      <%= stylesheet_link_tag 'blueprint/ie', :media => 'screen' %>
    <![endif]-->
    <%= stylesheet_link_tag 'custom', :media => 'screen' %>
  <!-- blueprint files end -->

</head>
<body>
  <div class="container showgrid"> <!-- blueprint container start (rm grid)-->
    <header>
      <%= image_tag("thumb.wine-logo.png", :alt => "Vino Logo", :class => "round") %>
      <nav class="round">
        <ul>
          <li><%= link_to "Home", "#" %></li>
          <li><%= link_to "Help", "#" %></li>
          <li><%= link_to "Sign in", "#" %></li>
        </ul>
      </nav>
    </header>
    <section class="round">
      <%= yield %>
    </section>
  </div> <!-- blueprint container end-->
</body>
</html>
